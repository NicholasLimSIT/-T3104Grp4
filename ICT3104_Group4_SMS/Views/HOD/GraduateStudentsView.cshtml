@model IEnumerable<ICT3104_Group4_SMS.Models.ApplicationUser>
@{
    ViewBag.Title = "GraduateStudentsView";
}

<h2>GraduateStudentsView</h2>
<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="header">
                <h4 class="title">Authorized Graduation</h4>
                <p class="category">List of Students Graduating</p>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                          
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                
                                <td>
                                    <button onclick="location.href='@Url.Action("g", "HOD",new { id = item.Id})';return true;" class="btn btn-primary"><i class="pe-7s-study"></i> Authorized</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>