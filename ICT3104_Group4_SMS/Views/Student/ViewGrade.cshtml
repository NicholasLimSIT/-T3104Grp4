@model IEnumerable<ICT3104_Group4_SMS.Models.GradeRecViewModel>
@{
    ViewBag.Title = "ViewGrade";
}

<h2>ViewGrade</h2>

<div class="row">
    <div class="col-md-12">
        
        <div class="card">
            
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ModuleName)</th>
                        
                        <th>@Html.DisplayNameFor(model => model.GradeItem.grade)</th>
                    </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in @ViewBag.ModulesGrades)
                        {
                            string[] tokens = @item.Split(',');
                            <tr>
                                <td>@item[0]</td>
                                
                                <td>@item[1]</td>

                                
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
        
        
        

    </div>
    

</div>