@model IEnumerable<ICT3104_Group4_SMS.Models.ApplicationUser>
@{
    ViewBag.Title = "EditAccount";
}

@using (Html.BeginForm("SearchAccountParticulars", "Admin", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-5">
            <input type="text" name="name" placeholder="Enter Account's Name" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary" value="Search"><i class="pe-7s-search"></i></button>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-12">
            <div class="card">

                <div class="header">
                    <h4 class="title">Search Results</h4>
                    <p class="category">List of Accounts</p>
                </div>

                
                <div class="content table-responsive table-full-width">
                    <table class="table table-hover table-striped">
                        <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.UserName)</th>
                            
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            
                            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                            
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        
                        <tbody>
                        @if (ViewBag.List != null)
                        {
                            foreach (var users in @ViewBag.List)
                            {
                                <tr>
                                    <td>@users[1]</td>
                                    
                                    <td>@users[2]</td>
                                    
                                    <td>@users[3]</td>
                                </tr>
  
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
