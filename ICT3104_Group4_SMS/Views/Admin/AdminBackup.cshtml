@{
    ViewBag.Title = "Admin Backup";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Backup</title>
</head>
<body>
    <div class="row">
   
        <div class="card">
            <div class="header">
                <h4 class="title">Backup Routines</h4>
            </div>
            <div class="content">
                <p class="category">Application Backup</p>
                <div class="form-group">
                    <select class="form-control">
                        <option>Monthly</option>
                        <option>Yearly</option>
                        <option>Weekly</option>
                        <option>Daily</option>
                    </select>
                </div>
                <br />
                <p class="category">Database Backup</p>
                <div class="form-group">
                    <select class="form-control">
                        <option>Weekly</option>
                        <option>Daily</option>
                        <option>Monthly</option>
                        <option>Yearly</option>
                    </select>
                </div>
                <br />
                <button class="btn btn-primary"><i class="pe-7s-browser"></i>Update Routines</button>
            </div>
        </div>

            <div class="card">
                <div class="header">
                    <h4 class="title">Application Backup Schedule</h4>
                </div>
                <div class="content">          
                    <p class="category">Last Application Backup</p>
                    <h6>Friday,7 October 2016</h6>
                    <br />
                    <p class="category">Next Application Backup</p>
                    <h6>Monday,7 November 2016</h6>
                    <br />
                    <button class="btn btn-primary"><i class="pe-7s-browser"></i> Backup Up Application Now</button>  
                </div>         
            </div>

        <div class="card">
            <div class="header">
                <h4 class="title">Database Backup Schedule</h4>
            </div>
            <div class="content">
                <p class="category">Last Database Backup</p>
                <h6>Friday,7 October 2016</h6>
                <br/>
                <p class="category">Next Database Backup</p>
                <h6>Friday,14 October 2016</h6>
                <br />
                <button class="btn btn-primary"><i class="pe-7s-server"></i> Backup Up Database Now</button>  
            </div>
  
        </div>
      </div>
</body>
</html>
