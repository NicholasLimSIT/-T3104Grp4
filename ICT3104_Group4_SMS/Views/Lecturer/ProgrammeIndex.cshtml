@model IEnumerable<ICT3104_Group4_SMS.Models.Programme>

@{
    ViewBag.Title = "Programmes";
}


    <div class="row">
        <div class="col-md-12">
            <button onclick="location.href='@Url.Action("ProgrammeCreate", "Lecturer")';return false;" class="btn btn-primary"><i class="fa fa-edit "></i>Create New Programme</button>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="header">
                    <h4 class="title">Programme Management</h4>
                    <p class="category">List of created Programme</p>
                </div>
                <div class="content table-responsive table-full-width">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.programmeName)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.programmeName)

                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "ProgrammeEdit", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "ProgrammeDelete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
