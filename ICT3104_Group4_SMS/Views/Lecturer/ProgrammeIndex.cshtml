@model IEnumerable<ICT3104_Group4_SMS.Models.Programme>

@{
    ViewBag.Title = "View all Programme";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateProgramme")
</p>
<table class="table">
    <tr>
