@model IEnumerable<ICT3104_Group4_SMS.Models.Module>

@{
    ViewBag.Title = "Assign Student's Grades";
}

<h2>Module In-Charge</h2>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="header">
                <h4 class="title">Programme Management</h4>
                <p class="category">List of created Programme</p>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.status)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.year)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.year)
                                </td>
                                <td>
                                    <button onclick="location.href='@Url.Action("GradeAssign", "Lecturer",new { id = item.Id})';return false;" class="btn btn-primary"><i class="pe-7s-pen"></i>Assign Grade</button>                                
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>





