@model IEnumerable<ICT3104_Group4_SMS.Models.Grade>

@{
    ViewBag.Title = "View Grades";
}

<h2>View Grades</h2>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="header">
                <h4 class="title">Grades for Module @ViewBag.moduleName</h4>
            </div>
            <br />
            <div class="col-md-12">
                <button onclick="location.href='@Url.Action("GradeAssign", "Lecturer",new { id = ViewBag.moduleId })';return false;" class="btn btn-primary"><i class="pe-7s-pen"></i> Update Grades</button>
            </div>
            <br />
            @if (Model.Count() == 0)
            {
                <p class="text-danger">
                    There are no students taking this module.
                </p>
            }
            else
            {
                <div class="content table-responsive table-full-width">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.studentId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.score)
                                </th>
                                <th>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.studentId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.score)
                                    </td>
                                    <td>
                                        <button onclick="location.href='@Url.Action("RecommendationCreate", "Lecturer", new { id = item.Id })';return false;" class="btn btn-primary"><i class="pe-7s-rocket"></i> Add Recommendation</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
