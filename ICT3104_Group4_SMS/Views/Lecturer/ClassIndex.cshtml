@model IEnumerable<ICT3104_Group4_SMS.Models.Class>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "ClassCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "ClassEdit", new { id = item.Id }) |
                @Html.ActionLink("Details", "ClassDetails", new { id = item.Id }) |
                @Html.ActionLink("Delete", "ClassDelete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
