@model IEnumerable<ICT3104_Group4_SMS.Models.Module>

@{
    ViewBag.Title = "View All  Modules";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", " ModuleCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.frozenDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.publishDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.year)
        </th>       
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.frozenDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.publishDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "ModuleEdit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "ModuleDelete", new { id=item.Id })
        </td>
    </tr>
}

</table>
