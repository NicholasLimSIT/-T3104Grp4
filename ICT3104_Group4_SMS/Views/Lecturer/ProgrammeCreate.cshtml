@model ICT3104_Group4_SMS.Models.Programme

@{
    ViewBag.Title = "Create a Programme";
}

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="header">
                <h4 class="title">Programme Creation</h4>
                <p class="category">Enter Programme Details</p>
            </div>


            <div class="panel-body">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(model => model.programmeName, htmlAttributes: new { @class = "col-md-2 control-label" })
                        @Html.EditorFor(model => model.programmeName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.programmeName, "", new { @class = "text-danger" })
                      
                    </div>
                    <div class="form-group">
                        <div>
                            <input type="submit" class="btn btn-default" value="Create" />
                        </div>
                    </div>

                }
            </div>

        </div>
    </div>
</div>
            <div>
                @Html.ActionLink("Back to List", "ProgrammeIndex")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
